@model PageList<Excep>
@{
    Layout = null;
}
<table class="table table-striped table-bordered table-hover table-fix table-manage">
    <thead>
        <tr>
            <th class="">消息</th>
            <th class="w150px" data-order="@nameof(Excep.IPAddress)">IP地址</th>
            <th class="text-center w160px" data-order="@nameof(Excep.CreateDateTime)">操作时间</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td class="nowrap">
                    <a class="uimodal" title="@record.Title"
                       data-size="big" data-backdrop="true" data-url="@Url.Action("Details", new {id = record.Id})">
                        @record.Title
                    </a>
                </td>
                <td class="">@record.IPAddress</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.CreateDateTime)</td>
            </tr>
        }
    </tbody>
</table>
@Html.RenderPages(Model)