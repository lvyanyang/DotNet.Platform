@using DotNet.Edu.Service
@model PageList<PeriodDetails>
@{
    Layout = null;
}
<table class="table table-bordered table-hover table-manage">
    <thead>
    <tr>
        <th class="">课件名称</th>
        <th class="w100px" data-order="@nameof(PeriodDetails.StudyCategory)">学习方式</th>
        <th class="w100px">IP地址</th>
        <th class="w160px" data-order="@nameof(PeriodDetails.SignInDateTime)">签到时间</th>
        <th class="w160px" data-order="@nameof(PeriodDetails.SignOutDateTime)">签退时间</th>
        <th class="w100px" data-order="@nameof(PeriodDetails.Period)">完成学时</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td class="">@EduService.Courseware.GetName(record.CoursewareId)</td>
                <td class="">@record.StudyCategory</td>
                <td class="">@record.IPAddress</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.SignInDateTime)</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.SignOutDateTime)</td>
                <td class="">@DateTimeHelper.GetTimeStringHMS(record.Period)</td>
            </tr>
        }
    </tbody>
</table>
@Html.RenderPages(Model)