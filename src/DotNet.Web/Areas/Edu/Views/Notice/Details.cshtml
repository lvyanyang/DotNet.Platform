@model Notice
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">通知公告 - @Model.Title</h4>
</div>
<div class="modal-body">
    <div class="form-body">
        <table class="table table-bordered table-striped table-details">
            <tr>
                <th class="w100px">标题</th>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <th>发布时间</th>
                <td>@DateTimeHelper.FormatDateHasSecond(Model.CreateDateTime)</td>
            </tr>
				 <tr>
					<th>消息内容</th>
					<td>@Html.Raw(Model.Message)</td>
				</tr>
				
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
        <i class="fa fa-sign-in"></i> 关闭
    </button>
</div>