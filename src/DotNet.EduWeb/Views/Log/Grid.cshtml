@model PageList<Log>
<table class="table table-striped table-bordered table-hover table-fix table-manage">
    <thead>
        <tr>
            <th class="" data-order="@nameof(Log.Title)">标题</th>
            <th class="w120px" data-order="@nameof(Log.IPAddress)">IP地址</th>
            <th class="w100px" data-order="@nameof(Log.CreateUserName)">操作人姓名</th>
            <th class="w160px" data-order="@nameof(Log.CreateDateTime)">操作时间</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>
                    <a class="uimodal" data-backdrop="true" data-size="lg"
                       data-url="@Url.Action("Details", new {id = record.Id})"
                       title="@record.Title">
                        @record.Title
                    </a>
                </td>
                <td>@record.IPAddress</td>
                <td>@record.CreateUserName</td>
                <td>@DateTimeHelper.FormatDateHasSecond(record.CreateDateTime)</td>
            </tr>
        }
    </tbody>
</table>
@Html.RenderPages(Model)