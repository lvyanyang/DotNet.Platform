@model PageList<Param>
<table class="table table-striped table-bordered table-hover table-fix table-manage">
    <thead>
        <tr>
            <th class="w35px">
                <label><input class="checkbox-check" type="checkbox"><span></span></label>
            </th>
            <th class="w150px" data-order="@nameof(Param.Name)">名称</th>
            <th class="w150px" data-order="@nameof(Param.Code)">编码</th>
            <th class="w150px" data-order="@nameof(Param.Value)">参数值</th>
            <th class="w150px" data-order="@nameof(Param.CategoryName)">分类</th>
            @*<th class="w100px" data-order="@nameof(Param.CreateUserName)">创建者</th>
            <th class="w160px" data-order="@nameof(Param.CreateDateTime)">创建时间</th>*@
            <th class="w100px" data-order="@nameof(Param.ModifyUserName)">修改者</th>
            <th class="w160px" data-order="@nameof(Param.ModifyDateTime)">修改时间</th>
            <th class="text-center w70px">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>
                    <label><input class="checkbox-check" type="checkbox" value="@record.Id"><span></span></label>
                </td>
                <td class="nowrap">
                    <a class="uimodal" data-backdrop="true" data-url="@Url.Action("Details",new {id = record.Id})">
                        @record.Name
                    </a>
                </td>
                <td class="">@record.Code</td>
                <td class="nowrap">@record.Value</td>
                <td class="">@record.CategoryName</td>
                @*<td class="">@record.CreateUserName</td>
                <td class="">@DateTimeHelper.FormatDateHasSecond(record.CreateDateTime)</td>*@
                <td class="">@record.ModifyUserName</td>
                <td class="">@DateTimeHelper.FormatDateHasSecond(record.ModifyDateTime)</td>
                <td class="text-center">
                    <a class="color-primary uimodal" data-toggle="tooltip"
                       data-url="@Url.Action("Edit", new {id = record.Id})"
                       title="编辑">
                        <i class="fa fa-lg fa-edit"></i>
                    </a>
                    &nbsp;
                    <a class="color-danger tsdelete" data-toggle="tooltip"
                       data-url="@Url.Action("Delete", new {id = record.Id})"
                       title="删除">
                        <i class="fa fa-lg fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.RenderPages(Model)