@model Role
<div class="modal-header">
    <button class="close" data-dismiss="modal" type="button" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">系统角色 - @Model.Name</h4>
</div>
<div class="modal-body">
    <table class="table table-bordered table-striped table-details">
        <tr>
            <th class="w100px">名称</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>简拼</th>
            <td>@Model.Spell</td>
        </tr>
        <tr>
            <th>分类</th>
            <td>@Model.CategoryName</td>
        </tr>
        <tr>
            <th>启用</th>
            <td>@Html.BoolLabel(Model.IsEnabled)</td>
        </tr>
        <tr>
            <th>序号</th>
            <td>@Model.RowIndex</td>
        </tr>
        <tr>
            <th>创建者</th>
            <td>@Model.CreateUserName</td>
        </tr>
        <tr>
            <th>创建时间</th>
            <td>@Model.CreateDateTime</td>
        </tr>
        <tr>
            <th>修改者</th>
            <td>@Model.ModifyUserName</td>
        </tr>
        <tr>
            <th>修改时间</th>
            <td>@Model.ModifyDateTime</td>
        </tr>
        <tr>
            <th>备注</th>
            <td>@Model.Note</td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" type="button">
        <i class="fa fa-sign-in"></i> 关闭
    </button>
</div>