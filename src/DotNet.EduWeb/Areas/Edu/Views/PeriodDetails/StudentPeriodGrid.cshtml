@model PageList<PeriodDetails>
<table class="table table-striped table-bordered table-hover table-fix table-manage">
    <thead>
        <tr>
            <th class="w80px" data-order="@nameof(PeriodDetails.StudentName)">学员姓名</th>
            <th class="w80px" data-order="@nameof(PeriodDetails.StudyCategory)">学习方式</th>
            <th class="w150px" data-order="@nameof(PeriodDetails.IPAddress)">IP地址</th>
            <th class="w160px" data-order="@nameof(PeriodDetails.SignInDateTime)">签到时间</th>
            <th class="w160px" data-order="@nameof(PeriodDetails.SignOutDateTime)">签退时间</th>
            <th class="" data-order="@nameof(PeriodDetails.Period)">时长</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td class="">
                    <a class="uimodal" data-backdrop="true" data-url="@Url.Action("Details", new {id = record.Id})">
                        @record.StudentName
                    </a>
                </td>
                <td class="">@record.StudyCategory</td>
                <td class="">@record.IPAddress</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.SignInDateTime)</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.SignOutDateTime)</td>
                <td class="">@DateTimeHelper.GetTimeStringHMS(record.Period)</td>
            </tr>
        }
    </tbody>
</table>
@Html.RenderPages(Model)