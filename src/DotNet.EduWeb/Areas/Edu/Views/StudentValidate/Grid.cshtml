@model PageList<StudentValidate>
<table class="table table-striped table-bordered table-hover table-fix table-manage">
    <thead>
        <tr>
            <th class="w35px">
                <label><input class="checkbox-check" type="checkbox"><span></span></label>
            </th>           
            <th class="" data-order="@nameof(StudentValidate.Name)">标题</th>
            <th class="w100px" data-order="@nameof(StudentValidate.A)">选项A</th>
            <th class="w100px" data-order="@nameof(StudentValidate.B)">选项B</th>
            <th class="w100px" data-order="@nameof(StudentValidate.C)">选项C</th>
            <th class="w100px" data-order="@nameof(StudentValidate.D)">选项D</th>
            <th class="w100px" data-order="@nameof(StudentValidate.Answer)">正确答案</th>
            <th class="text-center w70px">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>
                    <label><input class="checkbox-check" type="checkbox" value="@record.Id"><span></span></label>
                </td>
                <td class="">
                    <a class="uimodal"  data-backdrop="true" data-url="@Url.Action("Details", new {id = record.Id})">
                        @record.Name
                    </a>
                </td>
                <td class="">@record.A</td>
                <td class="">@record.B</td>
                <td class="">@record.C</td>
                <td class="">@record.D</td>
                <td class="">@Html.LabelSuccess(record.Answer)</td>
                <td class="text-center">
                    <a class="color-primary uimodal" data-toggle="tooltip"
                       data-url="@Url.Action("Edit", new {id = record.Id})"
                       title="编辑">
                        <i class="fa fa-lg fa-edit"></i>
                    </a>
                    &nbsp;
                    <a class="color-danger tsdelete" data-toggle="tooltip"
                       data-url="@Url.Action("Delete", new {id = record.Id})"
                       title="删除">
                        <i class="fa fa-lg fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.RenderPages(Model)