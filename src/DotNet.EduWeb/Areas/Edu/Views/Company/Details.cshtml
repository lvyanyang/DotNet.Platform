@model Company
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">企业信息 - @Model.Name</h4>
</div>
<div class="modal-body">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-3">
                名称：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.Name
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                联系人：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.LinkMan
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                联系电话：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.TelPhone
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                手机号码：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.MobilePhone
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                传真：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.Fax
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                地址：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.Address
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                状态：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Html.BoolLabel(Model.IsEnabled)
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                创建时间：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @DateTimeHelper.FormatDateHasSecond(Model.CreateDateTime)
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                备注：
            </label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Model.Note
                </p>
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
        <i class="fa fa-sign-in"></i> 关闭
    </button>
</div>